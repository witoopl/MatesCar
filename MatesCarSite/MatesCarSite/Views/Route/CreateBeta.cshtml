@model MatesCarSite.ViewModels.RouteCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Route</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label for="StartLocation" class="control-label"></label>
                <input name="StartLocation" class="form-control" />
                <span asp-validation-for="StartLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndLocation" class="control-label"></label>
                <input asp-for="EndLocation" class="form-control" />
                <span asp-validation-for="EndLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelUsage" class="control-label"></label>
                <input asp-for="FuelUsage" class="form-control" />
                <span asp-validation-for="FuelUsage" class="text-danger"></span>
            </div>
       
            <label>
                Choose your friends
            </label>

           
            <div class="form-group">
                
                <table class="table">
                    @foreach (ApplicationUser user in ViewBag.FriendsList)
                    {
                        <tr>
                            <td>
                             <input type="checkbox" name="Passengers" value="@user.UserName">@user.UserFirstName @user.UserSurname
                            </td>
                        </tr>
                    }
                </table>
            </div>
           

            <div class="form-group">
                <label asp-for="ChargeForPassenger" class="control-label"></label>
                <input asp-for="ChargeForPassenger" class="form-control" />
                <span asp-validation-for="ChargeForPassenger" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.UserName" class="control-label"></label>
                <input asp-for="Driver.UserName" class="form-control" value="@User.Identity.Name" />
                <span asp-validation-for="Driver.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsFullyPaid" /> @Html.DisplayNameFor(model => model.IsFullyPaid)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
