@model MatesCarSite.Models.Route

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Route</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartLocation" class="control-label"></label>
                <input asp-for="StartLocation" class="form-control" />
                <span asp-validation-for="StartLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndLocation" class="control-label"></label>
                <input asp-for="EndLocation" class="form-control" />
                <span asp-validation-for="EndLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelUsage" class="control-label"></label>
                <input asp-for="FuelUsage" class="form-control" />
                <span asp-validation-for="FuelUsage" class="text-danger"></span>
            </div>
            <div class="dropdown">
                <input type="text" class="dropdown-toggle do" id="InputField">
                <div class="dropdown-menu">
                    <input type="checkbox" class="dropdown-item" />
                    <input type="checkbox" class="dropdown-item" />
                    <input type="checkbox" class="dropdown-item" />
                </div>
            </div>
            <label>
                Choose a browser from this list:
            </label>

            <input list="browsers" name="myBrowser" type="text" multiple/>
            <datalist id="browsers" >
                <option value="Chrome"/>
                <option value="Firefox"/>
                <option value="Internet Explorer"/>
                <option value="Opera"/>
                <option value="Safari"/>
                <option value="Microsoft Edge"/>
            </datalist>

            <div class="form-group">
                <label asp-for="ChargeForPassenger" class="control-label"></label>
                <input asp-for="ChargeForPassenger" class="form-control" />
                <span asp-validation-for="ChargeForPassenger" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.UserName" class="control-label"></label>
                <input asp-for="Driver.UserName" class="form-control" value="@User.Identity.Name" />
                <span asp-validation-for="Driver.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsFullyPaid" /> @Html.DisplayNameFor(model => model.IsFullyPaid)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
