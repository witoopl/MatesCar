@model MatesCarSite.ViewModels.RegisterUserViewModel



<div class="bg-primary m-1 p-1 text-white col col-12"><h4>Register</h4></div>


<div class="text-danger" asp-validation-summary="All"></div>




<form asp-action="Register" method="post" class="col col-xl-4 col-lg-6 col-md-8 col-sm-12">
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="PasswordConfirm"></label>
        <input asp-for="PasswordConfirm" class="form-control" type="password" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BankAccount"></label>
        <input asp-for="BankAccount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="IsDriver"></label>
        <input asp-for="IsDriver" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <button class="btn btn-primary" type="submit">Register</button>
</form>





